<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="12dp"
            android:paddingEnd="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_back"
                    android:contentDescription="@string/back_button_desc"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/text_primary" />

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaccine Tracker"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/backButton"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/addVaccineButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Add Vaccine"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/brand_green" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/petInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/card_gradient_bg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/petImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/CircularImageView"
                        app:strokeColor="@color/brand_green"
                        app:strokeWidth="2dp"
                        android:src="@drawable/dogpic" />

                    <TextView
                        android:id="@+id/petName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/text_primary"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/petImage"
                        app:layout_constraintTop_toTopOf="@id/petImage"
                        android:text="Coffee" />

                    <TextView
                        android:id="@+id/petBreed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/gray_600"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@id/petName"
                        app:layout_constraintStart_toStartOf="@id/petName"
                        app:layout_constraintTop_toBottomOf="@id/petName"
                        android:text="Chowchow • 1 year" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/upcomingVaccinesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upcoming Vaccinations"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="#E53935" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/vaccineName1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bordetella"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/vaccineDueDate1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Due: March 28, 2025"
                                    android:textColor="@color/gray_500"
                                    android:textSize="14sp"
                                    app:layout_constraintStart_toStartOf="@id/vaccineName1"
                                    app:layout_constraintTop_toBottomOf="@id/vaccineName1" />

                                <TextView
                                    android:id="@+id/daysLeft1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5 days left"
                                    android:textColor="#E53935"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toStartOf="@id/reminderSwitch1"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginEnd="8dp" />

                                <ImageView
                                    android:id="@+id/reminderSwitch1"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_reminder"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:tint="@color/brand_green" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="#FFC107" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/vaccineName2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rabies Booster"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/vaccineDueDate2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Due: April 15, 2025"
                                    android:textColor="@color/gray_500"
                                    android:textSize="14sp"
                                    app:layout_constraintStart_toStartOf="@id/vaccineName2"
                                    app:layout_constraintTop_toBottomOf="@id/vaccineName2" />

                                <TextView
                                    android:id="@+id/daysLeft2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="23 days left"
                                    android:textColor="#FFC107"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toStartOf="@id/reminderSwitch2"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginEnd="8dp" />

                                <ImageView
                                    android:id="@+id/reminderSwitch2"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_reminder"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:tint="@color/brand_green" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@color/brand_green" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/vaccineName3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DHPP Booster"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/vaccineDueDate3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Due: May 20, 2025"
                                    android:textColor="@color/gray_500"
                                    android:textSize="14sp"
                                    app:layout_constraintStart_toStartOf="@id/vaccineName3"
                                    app:layout_constraintTop_toBottomOf="@id/vaccineName3" />

                                <TextView
                                    android:id="@+id/daysLeft3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="58 days left"
                                    android:textColor="@color/brand_green"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toStartOf="@id/reminderSwitch3"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginEnd="8dp" />

                                <ImageView
                                    android:id="@+id/reminderSwitch3"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_reminder"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:tint="@color/brand_green" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/vaccineHistoryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vaccination History"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="8dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp">

                            <View
                                android:id="@+id/timeline1"
                                android:layout_width="2dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="8dp"
                                android:background="@color/gray_400" />

                            <View
                                android:id="@+id/timelineDot1"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="1dp"
                                android:background="@drawable/circle_bg"
                                android:backgroundTint="@color/brand_green" />

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F5F5F5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="12dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/historyVaccineName1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Rabies"
                                            android:textColor="@color/black"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/historyVaccineDate1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:text="Jan 15, 2025"
                                            android:textColor="@color/gray_500"
                                            android:textSize="14sp" />

                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/historyVaccineVet1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Dr. Smith • Animal Care Center"
                                        android:textColor="@color/gray_600"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/historyVaccineNextDue1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Next due: April 15, 2025"
                                        android:textColor="@color/gray_500"
                                        android:textSize="14sp" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp">

                            <View
                                android:id="@+id/timeline2"
                                android:layout_width="2dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="8dp"
                                android:background="@color/gray_400" />

                            <View
                                android:id="@+id/timelineDot2"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="1dp"
                                android:background="@drawable/circle_bg"
                                android:backgroundTint="@color/brand_green" />

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F5F5F5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="12dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/historyVaccineName2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="DHPP"
                                            android:textColor="@color/black"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/historyVaccineDate2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:text="Nov 20, 2024"
                                            android:textColor="@color/gray_500"
                                            android:textSize="14sp" />

                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/historyVaccineVet2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Dr. Johnson • PetCare Clinic"
                                        android:textColor="@color/gray_600"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/historyVaccineNextDue2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Next due: May 20, 2025"
                                        android:textColor="@color/gray_500"
                                        android:textSize="14sp" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@+id/timeline3"
                                android:layout_width="2dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="8dp"
                                android:background="@color/gray_400"
                                android:visibility="invisible" />

                            <View
                                android:id="@+id/timelineDot3"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="1dp"
                                android:background="@drawable/circle_bg"
                                android:backgroundTint="@color/brand_green" />

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F5F5F5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="12dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/historyVaccineName3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Bordetella"
                                            android:textColor="@color/black"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/historyVaccineDate3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:text="Sept 28, 2024"
                                            android:textColor="@color/gray_500"
                                            android:textSize="14sp" />

                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/historyVaccineVet3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Dr. Smith • Animal Care Center"
                                        android:textColor="@color/gray_600"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/historyVaccineNextDue3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Next due: March 28, 2025"
                                        android:textColor="@color/gray_500"
                                        android:textSize="14sp" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </RelativeLayout>

                    </LinearLayout>

                    <!-- View All Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewAllVaccinesButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="View All Records"
                        android:textAllCaps="false"
                        android:textColor="@color/brand_green"
                        app:backgroundTint="@color/white"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/brand_green"
                        app:strokeWidth="1dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addVaccineFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Add Vaccine"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/brand_green"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>